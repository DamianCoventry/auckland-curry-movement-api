<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="using:acm_mobile_app"
             xmlns:views="clr-namespace:acm_mobile_app.Views"
             x:Class="acm_mobile_app.MainPage"
             Title="MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Notifications" IconImageSource="notification.png" />
    </ContentPage.ToolbarItems>
    <Grid Padding="20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ImageButton Source="add.png"
                     Clicked="OnAddObject"
                     WidthRequest="32" HeightRequest="32"
                     ToolTipProperties.Text="Add a new object"
                     HorizontalOptions="End"
                     VerticalOptions="Center"/>

        <Grid x:Name="ObjectGrid" IsVisible="false" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Source="reservation.png"
                         Clicked="OnAddReservation"
                         WidthRequest="32" HeightRequest="32"
                         ToolTipProperties.Text="New reservation"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"/>

            <ImageButton Source="restaurant.png"
                         Clicked="OnAddRestaurant"
                         WidthRequest="32" HeightRequest="32"
                         ToolTipProperties.Text="New restaurant"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" Grid.Column="1"/>

            <ImageButton Source="member.png"
                         Clicked="OnAddMember"
                         WidthRequest="32" HeightRequest="32"
                         ToolTipProperties.Text="New member"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" Grid.Column="2"/>

            <ImageButton Source="level.png"
                         Clicked="NavigateToEditLevel"
                         WidthRequest="32" HeightRequest="32"
                         ToolTipProperties.Text="New level"
                     HorizontalOptions="Center"
                     VerticalOptions="Center" Grid.Column="3"/>

            <ImageButton Source="club.png"
                         Clicked="NavigateToEditClub"
                         WidthRequest="32" HeightRequest="32"
                         ToolTipProperties.Text="New club"
                     HorizontalOptions="Center"
                     VerticalOptions="Center" Grid.Column="4"/>
        </Grid>

        <ScrollView VerticalOptions="FillAndExpand" Grid.Row="2" Margin="0,15">
            
            <ListView ItemsSource="{Binding DinnerInfos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label TextColor="CornflowerBlue"
                                       Text="{Binding RestaurantName}" FontAttributes="Bold"/>
                                <Label Grid.Row="1" 
                                       Text="{Binding RestaurantStreetAddress}"/>
                                <Label Grid.Column="1" HorizontalTextAlignment="End" FontAttributes="Bold"
                                       Text="{Binding Organiser}"/>
                                <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End"
                                       Text="{Binding When}"/>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </ScrollView>

    </Grid>
</ContentPage>
