<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acm_mobile_app.Views.SignInPage"
             xmlns:views="clr-namespace:acm_mobile_app.Views"
             xmlns:viewmodels="clr-namespace:acm_mobile_app.ViewModels"
             x:DataType="views:SignInPage"
             Title="SignInPage"
             BackgroundColor="#f2fbf8">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Notifications" IconImageSource="notification.png" />
    </ContentPage.ToolbarItems>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="acm_logo_hi_res.png"/>
        <Button Grid.Row="1" Text="Sign In" Clicked="OnClickSignIn" Margin="20,5"/>
        <ActivityIndicator Grid.Row="2" x:Name="SigningInIndicator" IsRunning="False"/>
        <Label Grid.Row="3" x:Name="SignInResult" Text="" Margin="0,10" FontAttributes="Bold" FontSize="Large"/>
        <Label Grid.Row="4" Text="Access Token:"/>
        <Editor Grid.Row="5" x:Name="Token" HeightRequest="200" IsReadOnly="True"/>
    </Grid>
</ContentPage>
