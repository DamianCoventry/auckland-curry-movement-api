<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acm_mobile_app.Views.SignInPage"
             xmlns:views="clr-namespace:acm_mobile_app.Views"
             xmlns:models="clr-namespace:acm_mobile_app.Models"
             x:DataType="views:SignInPage"
             Title="SignInPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Notifications" IconImageSource="notification.png" />
    </ContentPage.ToolbarItems>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Text="Sign In" Clicked="OnClickSignIn" Margin="20,5"/>
        <ActivityIndicator x:Name="SigningInIndicator" IsRunning="False" Grid.Row="1"/>
        <Label x:Name="SignInResult" Text="" Grid.Row="2" Margin="0,10" FontAttributes="Bold" FontSize="Large"/>
        <Label Text="Access Token:" Grid.Row="3"/>
        <Editor x:Name="Token" HeightRequest="200" Grid.Row="4"/>
    </Grid>
</ContentPage>
