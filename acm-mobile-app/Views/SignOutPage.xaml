<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acm_mobile_app.Views.SignOutPage"
             xmlns:views="clr-namespace:acm_mobile_app.Views"
             xmlns:viewmodels="clr-namespace:acm_mobile_app.ViewModels"
             x:DataType="views:SignInPage"
             Title="SignOutPage"
             BackgroundColor="#f2fbf8"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Source="acm_logo_hi_res.png" Margin="0,80,0,0"/>

        <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" Margin="0,0,40,0">
            <ActivityIndicator IsRunning="True" HeightRequest="24"/>
            <Label Text="Signing out..." FontAttributes="Bold" FontSize="Medium"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>